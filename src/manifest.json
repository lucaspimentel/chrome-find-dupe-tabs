{
    "manifest_version": 3,
    "name": "Duplicate Tab Finder",
    "version": "1.0",
    "permissions": [
        "tabs"
    ],
    "icons": {
        "16": "images/icon16.png",
        "32": "images/icon32.png",
        "64": "images/icon64.png"
    },
    "action": {
        "default_icon": {
            "16": "images/icon16.png",
            "32": "images/icon32.png",
            "64": "images/icon64.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    },
    "description": "Find duplicate tabs in the current browser window."
}